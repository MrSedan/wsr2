<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="111dp"
        android:layout_marginTop="74dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="207dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_worldcinema"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="410dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/edit_text_borders"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="#AFAFAF"
        android:outlineSpotShadowColor="#AFAFAF"
        android:paddingStart="16dp"
        android:textColor="#AFAFAF"
        android:textColorHint="#AFAFAF"
        android:textFontWeight="400"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/edit_text_borders"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="#AFAFAF"
        android:outlineSpotShadowColor="#AFAFAF"
        android:paddingStart="16dp"
        android:textColor="#AFAFAF"
        android:textColorHint="#AFAFAF"
        android:textFontWeight="400"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginButton"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_button"
        app:layout_constraintBottom_toTopOf="@+id/goToRegisterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:lineHeight="18dp"
            android:text="@string/login_button"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/goToRegisterButton"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:drawable="@drawable/register_button_borders"
        android:text="@string/register_button"
        android:textAllCaps="false"
        android:textColor="#43DED0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
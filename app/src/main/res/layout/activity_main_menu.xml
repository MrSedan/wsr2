<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/coverImage"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_logo"
                android:contentDescription="@string/app_name"
                android:background="@drawable/cover_image"/>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame_1"
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="292dp"
                android:clipToOutline="true"
                android:background="@drawable/see_button">
                <TextView
                    android:id="@+id/seeCoverText"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:layout_marginStart="32dp"
                    android:text="Смотреть"
                    android:lineHeight="18dp"
                    android:textSize="14sp"
                    android:textFontWeight="700"
                    android:lineSpacingExtra="2sp"
                    android:translationY="-0.8sp"
                    android:gravity="center_horizontal|top"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_goneMarginTop="456dp"
                app:layout_goneMarginStart="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="432dp"
                android:text="В тренде"
                android:textColor="#43DED0"
                android:textSize="24sp"
                android:gravity="center_horizontal|top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>